function isPalindrome(str) {
  //write a loop that starts from the end and decrements
  for (var i = str; i < str.length - 1; i >= 0; i--) {
    if (str[i]) !== str[str.length - 1 - i]) {
      str.charAt(index)
      // i would use the prototype.charAt(index) tolowercase
      return false;
    }
  }
   return true;
}
function isPalindrome2(str) {
  str = str.tolowercase().split('');
  while (str.length > 1) {
    if (str.shift() !== str.pop()) {
      return false;
    }
  }
}

